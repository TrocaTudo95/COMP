void Declaration() : {}
{
  ( Element() ) ( <ASSIGN> ( ( "[" ArraySize() "]") | ( <ADDSUB_OP> )? <INTEGER> ) )? <PVIRG>
}

void Function() : {}
{
  try{
    < FUNCTION >
    < ID >
    (("[" "]")? < ASSIGN > < ID >)?
    < LPAR >
    (Varlist())?
    < RPAR >
  }catch(ParseException e){
      String msg="Error in function 1";
      error_skipto(RPAR,msg);
    }
     try{
      < LCHAVETA >
      Stmtlst()
      < RCHAVETA >
    }catch(ParseException ex){
        String msg="Error in function 2";
        error_skipto(RCHAVETA,msg);
      }

}

void Varlist() : {}
{
      ( Element() )( <VIRG> ( Element()) )*
}

void Element() : {}
{
    <ID> ("[" "]")?
}


void Stmtlst() : {}
{
( Stmt() )*
}

void Stmt() : {}
{
  While() | If() | try{ LOOKAHEAD(3) Assign() | Call() <PVIRG>}
  catch(ParseException e){
    String msg="Error in stmt";
    error_skipto(PVIRG,msg);
  }
}

void Assign() : {}
{
  try{
    Lhs() <ASSIGN>
  }catch(ParseException e){
    String msg="Error in assign 1";
    error_skipto(ASSIGN,msg);
  }
  try{
    Rhs() <PVIRG>
  }catch(ParseException e){
    String msg="Error in assign 2";
    error_skipto(PVIRG,msg);
  }

}

void Lhs() : {}
{
  AccessElement()
}

void Rhs() : {}
{
  ( Term() ( ( <ARITH_OP> | <BITWISE_OP> | <ADDSUB_OP> ) Term() )? )| "[" ArraySize() "]"
}

void ArraySize() : {}
{
(<ID>ScalarAccess()) | <INTEGER>
}

void Term() : {}
{
  ( <ADDSUB_OP> )? ( <INTEGER> | LOOKAHEAD(3)Call() | AccessElement())
}

void Exprtest() : {}
{
  try{
  <LPAR> Lhs() <RELA_OP> Rhs() <RPAR>
}catch(ParseException e){
  String msg="Error in Exprtest 1";
  error_skipto(RPAR,msg);
}
}

void While() : {}
{
  try {
    <WHILE> Exprtest() <LCHAVETA>
  }
  catch (ParseException e) {
    String msg="Error in while 1";
    error_skipto(LCHAVETA,msg);
  }
  try {
    Stmtlst() <RCHAVETA>
  }
  catch (ParseException e) {
    String msg="Error in while 2";
    error_skipto(RCHAVETA,msg);
  }
}

void If() : {}
{
  try{
      <IF> Exprtest() <LCHAVETA>
  }catch(ParseException e){
    String msg="Error in IF 1";
    error_skipto(LCHAVETA,msg);
  }try{
    Stmtlst() <RCHAVETA>
  }catch(ParseException e){
    String msg="Error in IF 2";
    error_skipto(RCHAVETA,msg);
  }
  (try{
     <ELSE> <LCHAVETA>Stmtlst() <RCHAVETA>
  }catch(ParseException e){
    String msg="Error in IF 3";
    error_skipto(RCHAVETA,msg);
  })?


}

void Call() : {}
{
    <ID> ( "." <ID> )? <LPAR> ( ArgumentList() )? <RPAR>
}

void ArgumentList() : {}
{
Argument() ( <VIRG> Argument() )*
}

void Argument() : {}
{
( <ID> | <STRING> | <INTEGER> )
}

